@model IEnumerable<Plataforma_EAD.Models.Matricula>

@{
    ViewData["Title"] = "Index";
}

<div class="p-6 bg-neutral-900 min-h-screen text-white">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-3xl font-bold">Matrículas</h1>
        <a asp-action="Create" class="bg-green-600 hover:bg-green-700 px-4 py-2 rounded-md flex items-center gap-1 transition-colors">
            <span class="material-symbols-outlined">add</span> Create New
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-neutral-800 rounded-lg overflow-hidden">
            <thead class="bg-neutral-700">
                <tr>
                    <th class="text-left p-3">Aluno</th>
                    <th class="text-left p-3">Curso</th>
                    <th class="text-left p-3">Data</th>
                    <th class="text-left p-3">Preço Pago</th>
                    <th class="text-left p-3">Status</th>
                    <th class="text-left p-3">Progresso</th>
                    <th class="text-left p-3">Nota Final</th>
                    <th class="text-left p-3">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-neutral-700 transition-colors">
                        <td class="p-3">@item.Aluno.Nome</td>
                        <td class="p-3">@item.Curso.Titulo</td>
                        <td class="p-3">@item.Data</td>
                        <td class="p-3">@item.PrecoPago</td>
                        <td class="p-3">@item.Status</td>
                        <td class="p-3">@item.Progresso</td>
                        <td class="p-3">@item.NotaFinal</td>
                        <td class="p-3 flex gap-2">
                            <a asp-action="Edit"
                               asp-route-alunoId="@item.AlunoId"
                               asp-route-cursoId="@item.CursoId"
                               class="bg-yellow-500 hover:bg-yellow-600 px-3 py-1 rounded-md flex items-center gap-1 transition-colors">
                                <span class="material-symbols-outlined">edit</span> Edit
                            </a>
                            <a asp-action="Details"
                               asp-route-alunoId="@item.AlunoId"
                               asp-route-cursoId="@item.CursoId"
                               class="bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded-md flex items-center gap-1 transition-colors">
                                <span class="material-symbols-outlined">visibility</span> Details
                            </a>
                            <a asp-action="Delete"
                               asp-route-alunoId="@item.AlunoId"
                               asp-route-cursoId="@item.CursoId"
                               class="bg-red-600 hover:bg-red-700 px-3 py-1 rounded-md flex items-center gap-1 transition-colors">
                                <span class="material-symbols-outlined">delete</span> Delete
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
