@model Plataforma_EAD.Models.Matricula

@{
    ViewData["Title"] = "Details";
}

<div class="p-6 bg-neutral-900 min-h-screen text-white">
    <h1 class="text-3xl font-bold mb-4">Detalhes da Matrícula</h1>

    <div class="max-w-md bg-neutral-800 p-6 rounded-lg shadow-md">
        <h4 class="text-xl font-semibold mb-2">Matrícula</h4>
        <hr class="border-gray-700 mb-4"/>

        <dl class="grid grid-cols-2 gap-2 mb-6">
            <dt class="font-medium">Aluno</dt>
            <dd>@Html.DisplayFor(model => model.Aluno.Nome)</dd>

            <dt class="font-medium">Curso</dt>
            <dd>@Html.DisplayFor(model => model.Curso.Titulo)</dd>

            <dt class="font-medium">Data</dt>
            <dd>@Html.DisplayFor(model => model.Data)</dd>

            <dt class="font-medium">Preço Pago</dt>
            <dd>@Html.DisplayFor(model => model.PrecoPago)</dd>

            <dt class="font-medium">Status</dt>
            <dd>@Html.DisplayFor(model => model.Status)</dd>

            <dt class="font-medium">Progresso</dt>
            <dd>@Html.DisplayFor(model => model.Progresso)</dd>

            <dt class="font-medium">Nota Final</dt>
            <dd>@Html.DisplayFor(model => model.NotaFinal)</dd>
        </dl>

        <div class="flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.AlunoId" class="bg-yellow-500 hover:bg-yellow-600 px-4 py-2 rounded-md flex items-center gap-1 transition-colors">
                <span class="material-symbols-outlined">edit</span> Edit
            </a>
            <a asp-action="Index" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md flex items-center gap-1 transition-colors">
                <span class="material-symbols-outlined">arrow_back</span> Back to List
            </a>
        </div>
    </div>
</div>
