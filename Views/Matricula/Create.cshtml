@model Plataforma_EAD.Models.Matricula

@{
    ViewData["Title"] = "Create";
}

<div class="p-6 bg-neutral-900 min-h-screen text-white">
    <h1 class="text-3xl font-bold mb-4">Nova Matrícula</h1>
    <h4 class="text-xl font-semibold mb-2">Matrícula</h4>
    <hr class="border-gray-700 mb-6"/>

    <div class="max-w-md bg-neutral-800 p-6 rounded-lg shadow-md">
        <form asp-action="Create" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="AlunoId" class="block mb-1 font-medium"></label>
                <select asp-for="AlunoId" asp-items="ViewBag.AlunoId" class="w-full px-3 py-2 rounded-md bg-neutral-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"></select>
            </div>

            <div>
                <label asp-for="CursoId" class="block mb-1 font-medium"></label>
                <select asp-for="CursoId" asp-items="ViewBag.CursoId" class="w-full px-3 py-2 rounded-md bg-neutral-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"></select>
            </div>

            <div>
                <label asp-for="Data" class="block mb-1 font-medium"></label>
                <input asp-for="Data" class="w-full px-3 py-2 rounded-md bg-neutral-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"/>
                <span asp-validation-for="Data" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="PrecoPago" class="block mb-1 font-medium"></label>
                <input asp-for="PrecoPago" class="w-full px-3 py-2 rounded-md bg-neutral-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"/>
                <span asp-validation-for="PrecoPago" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Status" class="block mb-1 font-medium"></label>
                <input asp-for="Status" class="w-full px-3 py-2 rounded-md bg-neutral-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"/>
                <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Progresso" class="block mb-1 font-medium"></label>
                <input asp-for="Progresso" class="w-full px-3 py-2 rounded-md bg-neutral-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"/>
                <span asp-validation-for="Progresso" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="NotaFinal" class="block mb-1 font-medium"></label>
                <input asp-for="NotaFinal" class="w-full px-3 py-2 rounded-md bg-neutral-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500"/>
                <span asp-validation-for="NotaFinal" class="text-red-500 text-sm"></span>
            </div>

            <div class="pt-4">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-md transition-colors flex items-center justify-center gap-1">
                    <span class="material-symbols-outlined">save</span> Create
                </button>
            </div>
        </form>

        <div class="mt-4">
            <a asp-action="Index" class="text-blue-400 hover:text-blue-500 transition-colors flex items-center gap-1">
                <span class="material-symbols-outlined">arrow_back</span> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
