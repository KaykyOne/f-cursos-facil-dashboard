@model Plataforma_EAD.Models.Curso

@{
    ViewData["Title"] = "Details";
}

<div class="p-6 bg-neutral-900 min-h-screen text-white">
    <h1 class="text-3xl font-bold mb-4">Detalhes do Curso</h1>

    <div class="max-w-md bg-neutral-800 p-6 rounded-lg shadow-md space-y-4">
        <h4 class="text-xl font-semibold">Curso</h4>
        <hr class="border-gray-700 mb-4"/>

        <div class="grid grid-cols-3 gap-2">
            <dt class="font-medium text-gray-300">Título</dt>
            <dd class="col-span-2 text-white">@Html.DisplayFor(model => model.Titulo)</dd>

            <dt class="font-medium text-gray-300">Descrição</dt>
            <dd class="col-span-2 text-white">@Html.DisplayFor(model => model.Descricao)</dd>

            <dt class="font-medium text-gray-300">Preço Base</dt>
            <dd class="col-span-2 text-white">@Html.DisplayFor(model => model.PrecoBase)</dd>

            <dt class="font-medium text-gray-300">Carga Horária</dt>
            <dd class="col-span-2 text-white">@Html.DisplayFor(model => model.CargaHoraria)</dd>
        </div>

        <div class="pt-4 flex gap-3">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="bg-yellow-500 hover:bg-yellow-600 px-4 py-2 rounded-md transition-colors flex items-center gap-1">
                <span class="material-symbols-outlined">edit</span> Edit
            </a>
            <a asp-action="Index" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md transition-colors flex items-center gap-1">
                <span class="material-symbols-outlined">arrow_back</span> Back to List
            </a>
        </div>
    </div>
</div>
