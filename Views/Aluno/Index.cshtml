@model IEnumerable<Plataforma_EAD.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<div class="p-6 bg-neutral-900 min-h-screen text-white">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-3xl font-bold">Alunos</h1>
        <a asp-action="Create"
            class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md flex items-center gap-1 transition-colors">
            <span class="material-symbols-outlined">add</span> Create New
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-700 bg-neutral-800 rounded-lg">
            <thead class="bg-neutral-700 text-left text-gray-200">
                <tr>
                    <th class="px-6 py-3">Nome</th>
                    <th class="px-6 py-3">Email</th>
                    <th class="px-6 py-3">Telefone</th>
                    <th class="px-6 py-3">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-neutral-600 transition-colors">
                        <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="px-6 py-4">@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td class="px-6 py-4 flex gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                                class="bg-yellow-500 hover:bg-yellow-600 px-3 py-1 rounded-md transition-colors text-black">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                                class="bg-green-500 hover:bg-green-600 px-3 py-1 rounded-md transition-colors text-black">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                                class="bg-red-500 hover:bg-red-600 px-3 py-1 rounded-md transition-colors text-black">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>