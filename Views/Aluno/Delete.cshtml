@model Plataforma_EAD.Models.Aluno

@{
    ViewData["Title"] = "Delete";
}

<div class="p-6 bg-neutral-900 min-h-screen text-white">
    <h1 class="text-3xl font-bold mb-4">Excluir Aluno</h1>
    <h3 class="text-lg mb-4">Tem certeza que deseja excluir este registro?</h3>

    <div class="max-w-md bg-neutral-800 p-6 rounded-lg shadow-md space-y-4">
        <h4 class="text-xl font-semibold">Aluno</h4>
        <hr class="border-gray-700 mb-4"/>

        <div class="grid grid-cols-3 gap-2">
            <dt class="font-medium text-gray-300">Nome</dt>
            <dd class="col-span-2 text-white">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="font-medium text-gray-300">Email</dt>
            <dd class="col-span-2 text-white">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="font-medium text-gray-300">Telefone</dt>
            <dd class="col-span-2 text-white">@Html.DisplayFor(model => model.Telefone)</dd>
        </div>

        <form asp-action="Delete" class="flex gap-3 pt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-md transition-colors flex items-center gap-1">
                <span class="material-symbols-outlined">delete</span> Delete
            </button>
            <a asp-action="Index" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md transition-colors flex items-center gap-1">
                <span class="material-symbols-outlined">arrow_back</span> Back to List
            </a>
        </form>
    </div>
</div>
